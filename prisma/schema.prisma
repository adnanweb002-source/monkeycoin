generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ────────────────────────────────────────────────
// ENUMS
// ────────────────────────────────────────────────
//

enum Position {
  LEFT
  RIGHT
}

enum Status {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum WalletType {
  F_WALLET      // Deposit wallet
  I_WALLET      // Referral / Binary Income
  M_WALLET      // ROI income
  BONUS_WALLET  // Rewards
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  TRANSFER_IN
  TRANSFER_OUT
  PACKAGE_PURCHASE
  BINARY_INCOME
  DIRECT_INCOME
  ROI_CREDIT
  RANK_REWARD
  ADJUSTMENT
}

//
// ────────────────────────────────────────────────
// USER MODEL
// ────────────────────────────────────────────────
//

model User {
  id             Int       @id @default(autoincrement())
  memberId       String    @unique @map("member_id")
  firstName      String    @map("first_name") @default("")
  lastName       String    @map("last_name")@default("")
  email          String    @unique
  phoneNumber    String    @map("phone_number")@default("")
  passwordHash   String    @map("password_hash")
  country        String    @default("")
  sponsorId      Int?      @map("sponsor_id")
  parentId       Int?      @map("parent_id")
  position       Position? @default(LEFT)

  status         Status    @default(ACTIVE)
  rankId         Int?      @map("rank_id")

  leftBv         Decimal   @default(0) @map("left_bv")
  rightBv        Decimal   @default(0) @map("right_bv")

  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  g2faSecret     String
  isG2faEnabled  Boolean

  // Self-relations (binary tree)
  sponsor        User?     @relation("UserSponsor", fields: [sponsorId], references: [id])
  sponsoredUsers User[]    @relation("UserSponsor")

  parent         User?     @relation("UserParent", fields: [parentId], references: [id])
  children       User[]    @relation("UserParent")

  // Relations
  twoFactorSecret TwoFactorSecret?
  refreshTokens   RefreshToken[]
  roles           Role[]     @relation("UserRole")
  auditLogs       AuditLog[] @relation("AuditByUser")

  // Wallet relations
  wallets         Wallet[]
  walletTxns      WalletTransaction[]
  withdrawalRequests WithdrawalRequest[]
  depositRequests DepositRequest[]
  packagePurchases PackagePurchase[]
  @@map("users")
}

//
// ────────────────────────────────────────────────
// TWO-FACTOR AUTH MODEL
// ────────────────────────────────────────────────
//

model TwoFactorSecret {
  id         Int      @id @default(autoincrement())
  userId     Int      @unique
  secretEnc  String
  createdAt  DateTime @default(now()) @map("created_at")
  enabled    Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])

  @@map("two_factor_secrets")
}

//
// ────────────────────────────────────────────────
// REFRESH TOKENS (JWT)
// ────────────────────────────────────────────────
//

model RefreshToken {
  id         Int      @id @default(autoincrement())
  tokenHash  String   @unique
  userId     Int
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  user User @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

//
// ────────────────────────────────────────────────
// ROLES
// ────────────────────────────────────────────────
//

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique

  users User[] @relation("UserRole")

  @@map("roles")
}

//
// ────────────────────────────────────────────────
// AUDIT LOGS
// ────────────────────────────────────────────────
//

model AuditLog {
  id         Int      @id @default(autoincrement())
  actorId    Int?
  actorType  String?
  action     String
  entity     String?
  entityId   Int?
  before     Json?
  after      Json?
  ip         String?
  createdAt  DateTime @default(now())

  actor User? @relation("AuditByUser", fields: [actorId], references: [id])

  @@map("audit_logs")
}

//
// ────────────────────────────────────────────────
// WALLETS
// ────────────────────────────────────────────────
//

model Wallet {
  id         Int        @id @default(autoincrement())
  userId     Int
  type       WalletType
  balance    Decimal    @default(0)
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  user         User              @relation(fields: [userId], references: [id])
  transactions WalletTransaction[]
  withdrawalRequests WithdrawalRequest[]
  depositRequests DepositRequest[]

  @@unique([userId, type])
  @@map("wallets")
}

//
// ────────────────────────────────────────────────
// WALLET TRANSACTIONS (LEDGER)
// ────────────────────────────────────────────────
//

model WalletTransaction {
  id            Int            @id @default(autoincrement())
  walletId      Int
  userId        Int
  type          TransactionType
  amount        Decimal
  direction     String          // "CREDIT" or "DEBIT"
  purpose       String?
  balanceAfter  Decimal         @map("balance_after")
  txNumber      String          @unique @map("tx_no")
  meta          Json?
  createdAt     DateTime        @default(now()) @map("created_at")

  wallet Wallet @relation(fields: [walletId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([walletId])
  @@map("wallet_transactions")
}

model WithdrawalRequest {
  id         Int      @id @default(autoincrement())
  userId     Int
  walletId   Int
  amount     Decimal
  method     String
  address    String?
  status     String   @default("PENDING") // PENDING / APPROVED / REJECTED / FAILED
  adminNote  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  wallet Wallet @relation(fields: [walletId], references: [id])

  @@map("withdrawal_requests")
}

model AdminSetting {
  id        Int     @id @default(autoincrement())
  key       String  @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("admin_settings")
}


model DepositRequest {
  id          Int      @id @default(autoincrement())
  userId      Int
  walletId    Int
  amount      Decimal
  method      String?   // UPI / USDT / BANK / etc
  reference   String?   // tx hash / ref no
  status      String    @default("PENDING") // PENDING | APPROVED | REJECTED
  createdAt   DateTime  @default(now())
  approvedAt  DateTime?

  user   User   @relation(fields: [userId], references: [id])
  wallet Wallet @relation(fields: [walletId], references: [id])

  @@index([userId])
  @@map("deposit_requests")
}

model Package {
  id               Int      @id @default(autoincrement())
  name             String
  investmentMin    Decimal  @map("investment_min")
  investmentMax    Decimal  @map("investment_max")
  dailyReturnPct   Decimal  @map("daily_return_pct") // e.g. 1.2
  durationDays     Int      @map("duration_days")
  capitalReturn    Decimal  @map("capital_return")   // fixed or % (you decide)

  isActive         Boolean  @default(true)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  purchases        PackagePurchase[]

  @@map("packages")
}

model PackagePurchase {
  id              Int      @id @default(autoincrement())
  userId          Int
  packageId       Int

  amount          Decimal
  startDate       DateTime
  endDate         DateTime

  lastCreditedAt  DateTime?
  status          String   // ACTIVE | COMPLETED

  createdAt       DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  package Package @relation(fields: [packageId], references: [id])

  @@index([userId])
  @@map("package_purchases")
}
